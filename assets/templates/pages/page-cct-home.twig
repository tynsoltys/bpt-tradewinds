
{% extends 'layouts/base.twig' %}

{% block body %}


    {{ include ('partials/header-secondary-blog.twig') }}
    <main class="flex-grow w-full max-w-7xl mx-auto xl:px-0 lg:flex pt-24 ">
        <section class="w-full rounded-lg shadow-lg mb-4 bg-brand-white  p-12">
            <article class="flex justify-between p-18">
                <header class="w-1/3 pr-12">
                    <h2 class="uppercase text-4xl tracking-widest font-bold mb-2 text-accent-blue pr-4">{{ post.title }}</h2>
                    <div class="col-span-1">
                        <p class="subheading">POSTED ON</p>
                        <p class="meta"><time datetime="{{ post.date | date('Y-m-d H:i:s') }}">{{ post.date }}</time></p>
                        <hr class="bg-gray-medium my-4">
                    </div>

                </header>


                <div class="prose w-2/3 mr-12">
                    {{ post.content }}
                </div>
            </article>


        </section>
    </main>


{#
    {% include 'partials/comments/comment-section.twig' %} #}
{% endblock body %}
