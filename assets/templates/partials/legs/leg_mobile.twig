                                        <h4 class="w-1/2 uppercase font-semibold text-sm text-accent-red">EXIT EXPIRY</h4>
                                        <p class="uppercase 1/2 text-sm {{ leg.display == 'past' ? 'text-gray-dark' : ''}}" aria-label="{{leg.leg_name}} entry date">{{leg.expiry}}</p>
                                    </div>
                                    <div class="flex flex-wrap mb-1">
                                        <h4 class="w-1/2 uppercase font-semibold text-sm text-accent-red">EXIT STRIKE</h4>
                                        <p class="uppercase 1/2 text-sm {{ leg.display == 'past' ? 'text-gray-dark' : ''}}" aria-label="{{leg.leg_name}} entry date">${{leg.strike}}</p>
                                    </div>
                                    <div class="flex flex-wrap mb-1">
                                        <h4 class="w-1/2 uppercase font-semibold text-sm text-accent-red">EXIT PRICE</h4>
                                        <p class="uppercase 1/2 text-sm {{ leg.display == 'past' ? 'text-gray-dark' : ''}}" aria-label="{{leg.leg_name}} entry date">${{leg.exit_price}}</p>
                                    </div>
                                    {% endif %}

                                    <div class="w-full py-4" >
                                            <p class="normalcase">
                                                {{leg.leg_description}}
                                            </p>
                                    </div>

                                    <div class="w-full flex items-center">

                                        {% if leg.learn_links is not empty %}
                                            <ul class="list-disc pl-6">
                                                {% for link in leg.learn_links %}
                                                <li class="underline tracking-wide text-brand-primary-medium text-xs leading-5">
                                                    <a href="{{link.learn_link_url.url}}" class="learn-link"> {{link.learn_link_url.title}}</a>
                                                </li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <span class="text-gray-medium italic tect-center block">--</span>
                                        {% endif %}


                                    </div>
                                    <div class="w-full leg-witt flex items-center">

                                        {{include ('partials/witt-leg.twig')}}

                                    </div>

                                </div>


                            </div>
                        </li>
