                                            {% if leg.strike is not empty %}
                                                ${{leg.strike}}
                                            {% else %}
                                                <span class="text-gray-medium">--</span>
                                            {% endif %}

                                        </p>
                                    </div>
                                    <div class="flex flex-wrap mb-1">
                                        <h4 class="w-1/2 uppercase font-semibold text-sm">EXPIRY</h4>
                                        <p class="uppercase {{ leg.display == 'past' ? 'text-gray-dark' : ''}}" aria-label="{{leg.leg_name}} expiry">
                                            {% if leg.expiry is not empty %}
                                                {{leg.expiry}}
                                            {% else %}
                                                <span class="text-gray-medium">--</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                    <div class="flex flex-wrap mb-1">
                                        <h4 class="w-1/2 uppercase font-semibold text-sm">ENTRY PRICE</h4>
                                        <p class="uppercase {{ leg.display == 'past' ? 'text-gray-dark' : ''}}" aria-label="{{leg.leg_name}} entry price">
                                            {% if leg.entry_price is not empty %}
                                                ${{leg.entry_price}}
                                            {% else %}
                                                <span class="text-gray-medium">--</span>
                                            {% endif %}
                                        </p>
                                    </div>



                                    {% if leg.exit_date %}
                                    <hr class="my-4">
                                    <div class="flex flex-wrap mb-1">
                                        <h4 class="w-1/2 uppercase font-semibold text-sm text-accent-red">EXIT DATE</h4>
                                        <p class="uppercase 1/2 text-sm {{ leg.display == 'past' ? 'text-gray-dark' : ''}}" aria-label="{{leg.leg_name}} entry date">{{leg.exit_date}}</p>
                                    </div>
                                                                        <div class="flex flex-wrap mb-1">
                                        <h4 class="w-1/2 uppercase font-semibold text-sm text-accent-red">EXIT ACTION</h4>
                                        <p class="uppercase 1/2 text-sm {{ leg.display == 'past' ? 'text-gray-dark' : ''}}" aria-label="{{leg.leg_name}} entry date">{{leg.exit_action}}</p>
