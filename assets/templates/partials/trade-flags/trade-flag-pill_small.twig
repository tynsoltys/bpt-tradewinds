{% if trade.trade_status == 'closed' %}
    <span class="pill pill_small text-brand-white bg-accent-red"><i class="fas fa-door-closed"></i> CLOSED</span>
{% else %}
    <span class="pill pill_small text-brand-white bg-{{trade.trade_flag.color_code}}"><i class="fas fa-{{trade.trade_flag.icon_code}}"></i> {{trade.trade_flag}}</span>
{% endif %}
