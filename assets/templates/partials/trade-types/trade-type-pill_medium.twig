{% if trade.post_type == ('bot') %}
    <span
        class="
            pill mr-1 bg-accent-blue-fade
            text-accent-blue
            border
            border-accent-blue"
        >
    {{trade.post_type}}
    </span>
{% elseif trade.post_type == ('lto') %}
    <span
    class="
    pill mr-1 bg-gray-light
    text-gray-dark
    border
    border-gray-dark "
    >
    {{trade.post_type}}
    </span>
{% elseif trade.post_type == ('ofi') %}
    <span
    class="
        pill mr-1 accent-gold-light
        text-accent-gold
        border
        border-accent-gold"
    >
    {{trade.post_type}}
    </span>
{% else %}

{% endif %}
