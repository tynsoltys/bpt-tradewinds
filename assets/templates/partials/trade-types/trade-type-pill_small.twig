{% if trade.type == ('cct') %}
    <span
        class="
            pill pill_small mr-1 bg-gray-light
        text-accent-red
        border
        border-accent-red"
        >
    {{trade.type}}
    </span>
{% elseif trade.type == ('bot') %}
    <span
        class="
            pill pill_small mr-1 bg-accent-blue-fade
            text-accent-blue
            border
            border-accent-blue"
        >
    {{trade.type}}
    </span>
{% elseif trade.type == ('lto') %}
    <span
    class="
    pill pill_small mr-1 bg-gray-light
    text-accent-green
    border
    border-accent-green"
    >
    {{trade.post_type}}
    </span>
{% elseif trade.type == ('ofi') %}
    <span
    class="
        pill pill_small mr-1 accent-gold-light
        text-accent-gold
        border
        border-accent-gold"
    >
    {{trade.type}}
    </span>
{% elseif trade.type == ('trade-setup-tac') %}
    <span
    class="
        portfolio-pill mr-1 bg-gray-light
        text-gray-dark
        border
        border-gray-dark"
    >
    TAC
    </span>
{% else %}

{% endif %}
