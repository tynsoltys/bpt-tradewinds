


<article class="trade-card rounded-lg shadow-lg p-8 mb-4 bg-brand-white grid grow-rows-full grid-cols-12">
    {# TRADE SETUP  #}
    <pre>set up card BOT</pre>
    <div class="grid grid-cols-full col-span-12 ">
        <div class="setup-details col-span-1 row-span-2 flex flex-wrap items-center">
            <h2 class="flex items-center" title="{{trade.underlying_name}}"><a href="" class="mr-2 symbol text-5xl font-black tracking-wide">{{trade.ticker_symbol}}</a>  {{ include ('partials/trade-types/trade-type-pill_small.twig') }}</h2>
            <p class="text-xl font-semibold block">{{trade.underlying_name}}</p>

        </div>
        <div class="col-span-1">
            <p class="subheading">LAST ACTIVITY</p>
            <p class="meta">{{trade.latest_update_date}}</p>
        </div>

        <div class="col-span-1">
            <h4 class="subheading">outlook</h4>
            <p class="meta text-{{trade.outlook.color_code}}"><i class="fas fa-{{trade.outlook.icon_code}}"></i> {{trade.outlook}}</p>

        </div>
        <div class="col-span-1">
            <p class="subheading">acb at update</p>
            <p class="meta">${{trade.acb_at_update}}</p>
        </div>
        <div class="">
            <h4 class="col-span-1 subheading">STRATEGY</h4>
            <p class="meta">{{trade.trade_strategy}}</p>
        </div>

        <div class="col-span-1 flex justify-end items-center">
            <h4 class="">{{ include ('partials/trade-flags/trade-flag-pill_medium.twig') }}</h4>
        </div>
    </div>

    <div class="grid grid-cols-full col-span-12 mt-4">
        <div class="col-span-1">
            <a href="{{trade.setup_chart.url}}" target="_blank" class="block">
                <img src="{{ trade.setup_chart.url|resize(200) }}" class="chart-leg-thumb shadow-xl" alt="Chart image for {{ leg.leg_name }}" />
            </a>
        </div>
        <div class="col-span-5 flex items-start ">
            <p class="meta text-sm normal-case font-normal mt-2">{{trade.trade_description}}</p>
        </div>
    </div>
    
    <div class="legs mt-6 col-span-12 ">
        <div class="mt-3 uppercase leg-headings font-semibold tracking-wider text-gray-dark bg-gray-light text-center grid grid-rows-1 grid-cols-4 gap-x-2 md:grid-cols-5 lg:grid-cols-12 px-2 rounded text-xs p-2 mt-2">
    
            <p class="col-span-2 entry-date">ENTRY DATE</p>
            <p class="col-span-1 leg-name">NAME</p>
            <p class="col-span-2 leg-strategy">STRATEGY</p>
            <p class="col-span-1 leg-strategy">UNIT RATIO</p>
            <p class="col-span-2 leg-strategy">ACTION</p>
            <p class="col-span-1 leg-strategy">STRIKE</p>
            <p class="col-span-1 leg-strategy">EXPIRY</p>
            <p class="col-span-1 leg-strategy">PRICE</p>
            <div class="col-span-1 dropdowner"><i class=" fas fa-ellipsis-h"></i></div>
        </div>
        <ul class="">
            {% for leg in trade.legs %}
            <li class="leg leg{{leg.index}} border-b border-gray-light bg-brand-secondary-fade" x-data="{selected:null}">
    
                <div class="uppercase text-center font-medium tracking-wide leg-main grid grid-rows-1 grid-cols-2 md:grid-cols-5 lg:grid-cols-12 gap-x-2 p-2 text-sm">
    
                    <p class="col-span-2 entry-date">{{leg.entry_date}}</p>
                    <p class="col-span-1 leg-name">{{leg.leg_name}}</p>
                    <p class="col-span-2 leg-strategy">{{leg.leg_strategy}}</p>
                    <p class="col-span-1 leg-strategy">{{leg.unit_ratio}}</p>
                    <p class="col-span-2 leg-strategy">{{leg.action}}</p>
                    <p class="col-span-1 leg-strategy">{{leg.strike}}</p>
                    <p class="col-span-1 leg-strategy">{{leg.expiry}}</p>
                    <p class="col-span-1 leg-strategy">{{leg.entry_price}}</p>
                    <div class="col-span-1 dropdowner" @click="selected !== 1 ? selected = 1 : selected = null" ><div class="" x-ref="toggle-icon " x-bind:class="selected == 1 ? 'rotate-180 transition-all duration-700' : ''"><i class="fas fa-chevron-down " ></i></div></div>
                </div>
                {% if leg.exit_date %}
                    <div class="uppercase text-center leg-exit grid grid-rows-1 grid-cols-2 md:grid-cols-5 lg:grid-cols-12 gap-x-2 p-2 text-xs">
                        <p class="col-span-1 leg-strategy">EXIT</p>
                        <p class="col-span-1 leg-strategy">{{leg.exit_date}}</p>s
                        <p class="col-span-1 leg-strategy">{{leg.exit_price}}</p>
                    </div>
                {% endif %}
                <div class="leg-detail grid grid-rows-1 grid-cols-2 md:grid-cols-5 gap-x-2 p-0 text-sm overflow-hidden transition-all max-h-0 duration-700" x-ref="leg1" x-bind:style="selected == 1 ? 'max-height: ' + $refs.leg1.scrollHeight + 'px' : ''" x-bind:style="selected == 1 ? 'p-6' : ''">
                    <div class="col-span-2 leg-description " >
                        <p class="">
                            {{leg.leg_description}}
                        </p>
                    </div>
                    <div class="col-span-1 leg-chart m-4">
                        <a href="{{leg.chart.url}}" target="_blank" class="">
                            <img src="{{ leg.chart.url|resize(200) }}" class="chart-leg-thumb shadow-xl" alt="Chart image for {{ leg.leg_name }}" />
                        </a>
                    </div>
                    <div class="col-span-1 leg-witt ">
                        <a href="{{leg.witt_link.url}}" target="_blank" class="btn btn-accent p-4 btn-big">
                            <i class="fas fa-video mr-1"></i> WITT SEGMENT
                        </a>
                    </div>
                    <div class="col-span-1 leg-description ">
    
                        <ul class="list-disc">
                            {% for link in leg.learn_links %}
                            <li class="underline tracking-wide text-brand-primary-medium text-xs leading-5">
                                <a href="{{link.learn_link_url.url}}" class="learn-link"> {{link.learn_link_url.title}} ...</a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>

    



</article>

