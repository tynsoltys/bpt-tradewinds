
<a href="{{trade.link}}" title="Go To Trade Details" aria-label="Go to Trade Details">
    <article class="trade-card rounded-lg shadow p-2 pl-3 pr-1 md:px-5 mb-4 bg-brand-white grid grid-cols-12 md:grid-cols-12 lg:grid-cols-concise text-left">

        <div class="col-span-5 sm:col-span-4 md:col-span-3 lg:col-span-1 flex items-center ellipsis">
            <h2 class="flex items-center" title="{{trade.underlying_name}}"><span class="mr-2 symbol text-3xl font-black tracking-wide">{{trade.ticker_symbol}}</span>

            </h2>
        </div>

        <div class="col-span-3 md:col-span-2 lg:col-span-1 ellipsis">
            {{ include ('partials/metabits/meta-allocation.twig') }}
        </div>
        <div class="col-span-2 md:col-span-2 lg:col-span-1 hidden sm:block ellipsis">
            {{ include ('partials/metabits/meta-outlook.twig') }}
        </div>
        <div class="lg:col-span-1 hidden lg:block ellipsis">
            {{ include ('partials/metabits/meta-strategy.twig') }}
        </div>
        <div class="md:col-span-2 lg:col-span-1 hidden md:block ellipsis">
            {{ include ('partials/metabits/meta-latest-update-date.twig') }}
        </div>
        <div class="col-span-2 md:col-span-2 lg:col-span-1 ellipsis flex justify-end items-center">
            <div class="hidden lg:block">
                {{ include ('partials/metabits/meta-trade-flag.twig') }}
            </div>
            <div class="lg:hidden">
                {{ include ('partials/trade-flags/trade-flag-pill_icon.twig') }}
            </div>
        </div>
        <div  class="col-span-1 block ml-5 flex items-center text-gray-medium hover:text-gray-dark">
            <i class="fas fa-ellipsis-h"></i>
        </div>
</article>
</a>
