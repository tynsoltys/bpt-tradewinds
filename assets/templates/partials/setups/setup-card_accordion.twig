        <div x-data='{setupOpen:1}' class="cursor-pointer trade-card block rounded-lg shadow bg-brand-white" x-bind:class="setupOpen == 1 ? 'mb-4' : 'mb-4'">
            <div title="Expand {{trade.ticker_symbol}} Details" aria-label="Expand {{trade.ticker_symbol}} Details" class="p-2 px-4 md:p-3 md:px-4 mb-2 md:mb-4  grid grid-cols-concise-xs xs:grid-cols-concise-xs sm:grid-cols-concise-sm md:grid-cols-concise-md lg:grid-cols-concise border-box" @click="setupOpen !== 1 ? setupOpen = 1 : setupOpen = null">

                <div class="setup-details col-span-1 flex items-center order-1 ellipsis">
                    <h2 class="flex items-center mr-2 symbol text-3xl font-black tracking-wide" title="{{trade.underlying_name}}"><span class="mr-2">{{trade.ticker_symbol}}</span>

                            {{ include ('partials/trade-types/trade-type-pill_small.twig') }}

                    </h2>
                </div>
                <div class="col-span-1 ellipsis order-2">
                    {{ include ('partials/metabits/meta-latest-update-date.twig') }}
                </div>

                <div class="col-span-1 ellipsis hidden sm:block order-5">
                    {{ include ('partials/metabits/meta-outlook.twig') }}
                </div>
                <div class="ellipsis order-5 hidden md:block">
                    {% if trade.post_type == 'bot' %}
                        {{ include ('partials/metabits/meta-last-traded.twig') }}
                    {% else %}
                        {{ include ('partials/metabits/meta-acb.twig') }}
                    {% endif %}
                </div>
                <div class="col-span-1 ellipsis order-5 hidden sm:block">
                    {{ include ('partials/metabits/meta-strategy.twig') }}
                </div>

                <div class="col-span-1 ellipsis flex justify-end items-center order-2 sm:order-5">
                    <div class="hidden md:block">
                        {{ include ('partials/metabits/meta-trade-flag.twig') }}
                    </div>
                    <div class="md:hidden">
                        {{ include ('partials/trade-flags/trade-flag-pill_icon.twig') }}
                    </div>
                </div>
                <div class="col-span-1 block lg:ml-5 flex justify-end md:justify-center items-center text-gray-medium hover:text-gray-dark order-5">
                    <i class="fas fa-chevron-down" x-bind:class="setupOpen == 1 ? 'rotate-180 transition-all duration-500 rotate-180 transform' : ''"></i>
                </div>




                {# href="{{trade.link}}" target="_blank" title="Go To Trade Details" aria-label="Go to Trade Details" #}
            </div>
            <div div class="setup-expansion grid grid-rows-1 grid-cols-concise gap-x-2 p-0 text-sm overflow-hidden transform transition-all max-h-0 duration-900 " x-ref="setup1" x-bind:style="setupOpen == 1 ? 'max-height: ' + ($refs.setup1.scrollHeight + 60 ) + 'px' : ''" x-bind:class="setupOpen == 1 ? 'p-6 pb-12' : ''">
                <div>
                    <p class="w-full text-xl font-semibold block mt-2">{{trade.ticker_symbol.underlying_name}}</p>
<p class="w-full text-xs tracking-wide uppercase text-gray-dark mr-4 mt-2">{{trade.ticker_symbol.sector}}</p>

                </div>
            </div>
        </div>

