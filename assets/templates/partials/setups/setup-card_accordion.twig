<div x-data='{ open: false }' x-on:toggleall.window="{ open = !open }"x-ref="trade" class="cursor-pointer trade-card block rounded-lg shadow bg-brand-white mb-3">
            <div title="Expand {{trade.ticker_symbol}} Details" aria-label="Expand {{trade.ticker_symbol}} Details" class="p-2 px-4 md:p-3 md:px-6 pb-0 md:pb-0 grid grid-cols-acc-xs xs:grid-cols-acc-xs sm:grid-cols-acc-sm md:grid-cols-acc-md lg:grid-cols-acc border-box" @click="open = !open" x-bind:class="open == true ? 'pb-0 md:pb-0' : 'p-2 px-4 md:p-3 md:px-6 pb-3 md:pb-3'">
                <div class="setup-details col-span-1 flex items-center order-1 ellipsis" x-bind:class="open == true ? 'sm:col-span-4 md:col-span-5 col-span-2' : 'md:col-span-1 lg:col-span-1'">
                    <h2 class="flex items-center mr-2 symbol text-3xl font-black tracking-wide" title="{{trade.underlying_name}}"><span class="mr-2 text-4xl">{{trade.ticker_symbol}}</span>
                            {{ include ('partials/trade-types/trade-type-pill_small.twig') }}
                    </h2>
                </div>
                <div class="col-span-1 ellipsis order-2" x-bind:class="open == true ? 'hidden' : 'sm:col-span-1 md:col-span-1 lg:col-span-1 md:block'">
                    {{ include ('partials/metabits/meta-latest-update-date.twig') }}
                </div>

                <div class="col-span-1 ellipsis order-5" x-bind:class="open == true ? 'hidden' : 'sm:col-span-1 lg:col-span-1 hidden sm:block'">
                    {{ include ('partials/metabits/meta-outlook.twig') }}
                </div>
                <div class="ellipsis order-5 " x-bind:class="open == true ? 'hidden' : 'sm:col-span-1 lg:col-span-1 hidden sm:block'">
                    {% if trade.post_type == 'bot' %}
                        {{ include ('partials/metabits/meta-last-traded.twig') }}
                    {% else %}
                        {{ include ('partials/metabits/meta-acb.twig') }}
                    {% endif %}
                </div>
                <div class="col-span-1 ellipsis order-5 " x-bind:class="open == true ? 'hidden' : 'hidden md:block'">
                    {{ include ('partials/metabits/meta-strategy.twig') }}
                </div>

                <div class="col-span-1 ellipsis flex justify-end items-center order-2 sm:order-5">
                    <div class="hidden md:block">
                        {{ include ('partials/metabits/meta-trade-flag.twig') }}
                    </div>
                    <div class="md:hidden">
                        {{ include ('partials/trade-flags/trade-flag-pill_icon.twig') }}
                    </div>
                </div>
                <div class="col-span-1 block lg:ml-5 flex justify-end md:justify-center items-center text-gray-medium hover:text-gray-dark order-5">
                    <i class="fas " x-bind:class="open == 1 ? ' transition-all duration-200 rotate-180 transform fa-minus-square' : 'fa-plus-square'"></i>
                </div>
                {# href="{{trade.link}}" target="_blank" title="Go To Trade Details" aria-label="Go to Trade Details" #}
            </div>
            <div div class="setup-expansion p-2 px-4 md:p-3 md:px-6 pt-0 md:pt-0  grid grid-cols-acc-xs xs:grid-cols-acc-xs sm:grid-cols-acc-sm md:grid-cols-acc-md lg:grid-cols-acc border-box p-0  overflow-hidden transform transition-all duration-200" x-show="open">
                <div class="col-span-7 lg:col-span-1 mb-4">
                    <p class="w-full text-lg mt-1 font-semibold block pr-8 leading-5">{{trade.ticker_symbol.underlying_name}}</p>
                    <p class="w-full text-xs tracking-wide uppercase text-gray-dark mr-4 mt-2">{{trade.ticker_symbol.sector}}</p>

                </div>

                {# mobile details #}
                <div class="lg:col-start-2 col-span-5 lg:col-span-4 grid-cols-2 md:grid-cols-4 grid mb-4" x-bind:class="open == true ? 'block' : 'hidden'">
                    <div class="">
                        {{ include ('partials/metabits/meta-latest-update-date.twig') }}
                    </div>
                    <div class="">
                        {{ include ('partials/metabits/meta-outlook.twig') }}
                    </div>
                    <div class=" mt-3 md:mt-0">
                        <div class="">
                            {% if trade.post_type == 'bot' %}
                                {{ include ('partials/metabits/meta-last-traded.twig') }}
                            {% else %}
                                {{ include ('partials/metabits/meta-acb.twig') }}
                            {% endif %}
                        </div>
                    </div>
                    <div class="mt-3 md:mt-0 ">
                        {{ include ('partials/metabits/meta-strategy.twig') }}
                    </div>
                </div>


                <div class="col-span-7 col-start-1 hidden lg:block ">
                    {# LEGS FOR FULL-WIDTH #}

                     {% if trade.trade_status == "Closed" %}
                        {{ include('partials/legs/legs-headers_past.twig')}}
                        <ul class="">
                           {% for leg in trade.legs %}
                                {% if leg.display == "Past" %}
                                    {{ include('partials/legs/leg--default.twig')}}
                                {% endif %}
                            {% endfor %}
                        </ul>
                    {% else %}
                        {{ include('partials/legs/legs-headers.twig')}}
                        <ul class="">
                           {% for leg in trade.legs %}
                                {% if leg.display == "Current" %}
                                    {{ include('partials/legs/leg--default.twig')}}
                                {% endif %}
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>



                <div class="col-span-7 col-start-1 lg:hidden mt-4">
                    {# LEGS FOR MOBILE #}
                        <ul class="">
                            {% for leg in trade.legs %}
                                {% if leg.display == "Current" %}
                                    {{ include('partials/legs/leg_mobile.twig')}}
                                {% endif %}
                            {% endfor %}
                        </ul>
                </div>
                <div class="flex justify-end col-span-7 pr-2 mt-4">
                <a href="{{trade.link}}" title="See full {{trade.ticker_symbol}} position history font-semibold text-2xl" class="italic underline text-accent-blue">
                    <i class="fa fa-clock mr-1"></i>
                    See Full Position History..
                </a>
                </div>
            </div>
        </div>

