<div class="mt-8 flex lg:justify-end">
    {% if trade.witt_fields.display == "link" %}
        <a href="{{trade.witt_fields.witt_link}}" target="_blank" class="btn btn-accent text-center w-full">
            <i class="fas fa-video ml-1"></i> WITT SEGMENT
        </a>
    {% elseif trade.witt_fields.display == "embed" %}
        <iframe src="https://player.vimeo.com/video/
            {{trade.witt_fields.vimeo_id}}
            {% if trade.witt_fields.timestamp is not empty %}
                #t={{trade.witt_fields.timestamp}}
            {% endif %}
        " width="100%" height="100%" frameborder="0" allow="fullscreen" allowfullscreen=""></iframe>
    {% else %}
        <span class="text-gray-medium italic tect-center block">WITT not available.</span>
    {% endif %}
</div>
